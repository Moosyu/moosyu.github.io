{% extends "base.njk" %}

{% block headStyle %}
    {% set commentCSS %} {% include "./css/comment-widget.css" %} {% endset %}
    {{ commentCSS | cssmin | safe }}

    @font-face {
        font-family: Cubular;
        src: url("/fonts/Cubular.ttf");
    }

    #frontpage-btn {
        width: 88px;
        height: 31px;
        image-rendering: pixelated;
    }
    .tooltip {
        position: relative;
        display: inline-block;
        cursor: pointer;
    }

    .tooltip .tooltip-text {
        visibility: hidden;
        width: 140px;
        background-color:rgb(35, 40, 46);
        color: #fff;
        text-align: center;
        border-radius: 6px;
        padding: 5px;
        position: absolute;
        z-index: 1;
        bottom: 150%;
        left: 50%;
        margin-left: -75px;
        opacity: 0;
        transition: opacity 0.3s;
    }

    .tooltip .tooltip-text::after {
        content: "";
        position: absolute;
        top: 100%;
        left: 50%;
        margin-left: -5px;
        border-width: 5px;
        border-style: solid;
        border-color: rgb(35, 40, 46) transparent transparent transparent;
    }

    .tooltip:hover .tooltip-text {
        visibility: visible;
        opacity: 1;
    }

    #hit-counter {
        font-family: Cubular;
        color: #30e898;
        font-size: 20px;
        text-shadow: 1px 1px 0px #ffa500;
        filter: drop-shadow(0px 0px 5px #000824);
    }
{% endblock %}

{% block head %}
