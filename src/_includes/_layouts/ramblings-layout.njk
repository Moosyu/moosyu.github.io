{% extends "base.njk" %}

{% block title %}
  {{ title | default("moosyus crack emporium") }}
{% endblock %}


{% block content %}
<div class="main-box background-div">
    <h3>Click images to view full size.</h3>
    {{ content | safe }}
</div>

<script>
  document.querySelectorAll('img').forEach(img => {
    img.style.width = '20%';
    img.loading = 'lazy';
    img.addEventListener('click', () => {
      if (img.style.width != '20%') {
        img.style.width = '20%';
      } else {
        img.style.width = 'auto';
      }
    });
  });
</script>
{% endblock %}